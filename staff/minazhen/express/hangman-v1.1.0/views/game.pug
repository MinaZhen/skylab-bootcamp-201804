extends layout.pug
block content
  body.text-center.bg-body
    .cover-container.d-flex.h-100.p-3.mx-auto.flex-column
      header.masthead.mb-auto
        .inner
          h1.masthead-brand.display-3 Hangman
      main.inner.cover(role='main')
        if error
          .alert.alert-warning.alert-dismissible
            a.close(href='/game', data-dismiss='alert', aria-label='close') ×
            strong Warning! 
            span #{error}
        // <p>${hangman.attempts()}</p>
        h1#sparcing.masthead-brand.display-6 #{hangman.guessed().join("").toUpperCase()}
        br
        form(action='/try', method='POST')
          .form-inline.input-group.mx-auto
            input#desc.form-control(type='text', placeholder='Word or letter', name='text', autofocus='')
            .input-group-append
              input.btn.btn-outline-secondary(type='submit', value='Send!')
        if hangman.status() === 1
          #myModal.modal.modal-sm.bg-success.modal-dialog.modal-content.modal-body(role='dialog')
            a.close(href='/', data-dismiss='modal') ×
            h5  ✨ YOU WIN ✨ 
            br
        if hangman.status() === 2
          #myModal.modal.modal-sm.bg-danger.modal-dialog.modal-content.modal-body(role='dialog')
            a.close(href='/', data-dismiss='modal') ×
            h5  ☠ YOU LOSE ☠ 
            br
      include footer.pug